{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
        </tbody>
    </table>

    <h2>All participants in this Tournament</h2>
    <ul>
    {% for participant in participants %}
        <li>{{ participant.player.name }}</li>
    {% else %}
        <li>nothing to see here...</li>
    {% endfor %}
    </ul>

    <h2>Match-up</h2>
    <h3>Round 1</h3>


    <a href="{{ path('tournament_index') }}">back to list</a>

    <a href="{{ path('tournament_edit', {'id': tournament.id}) }}">edit</a>

    <a href="{{ path('tournament_creatematchup', {'id': tournament.id}) }}">generate match-up for round 1</a>

    {{ include('tournament/_delete_form.html.twig') }}
{% endblock %}
